{
  "name": "code-format",
  "version": "0.0.1",
  "description": "code-format by eslint, commitlint, stylelint, prettier",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0"
  },

  "list-staged": {
    "*.{js,vue,ts,json}": [
      "prettier --write"
    ],
    "*.{js,vue,ts}": [
      "eslint --fix"
    ],
    "*.less": [
      "stylelint --fix"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },

  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
